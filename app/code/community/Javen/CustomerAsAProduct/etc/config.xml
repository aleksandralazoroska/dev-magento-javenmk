<?xml version="1.0"?>
<config>
  <modules>
    <Javen_CustomerAsAProduct>
      <version>0.1.0</version>
    </Javen_CustomerAsAProduct>
  </modules>
  <frontend>
    <routers>
      <customerasaproduct>
        <use>standard</use>
          <args>
            <module>Javen_CustomerAsAProduct</module>
            <frontName>customerasaproduct</frontName>
          </args>
      </customerasaproduct>
      <customer>
        <args>
          <modules>
            <Javen_CustomerAsAProduct before="Mage_Customer">Javen_CustomerAsAProduct</Javen_CustomerAsAProduct>
          </modules>
        </args>
      </customer>
    </routers>
		<layout>
		  <updates>
			<customerasaproduct>
			  <file>customerasaproduct.xml</file>
			</customerasaproduct>
		  </updates>
		</layout>
  </frontend>
  <global>
    <helpers>
      <customerasaproduct>
        <class>Javen_CustomerAsAProduct_Helper</class>
      </customerasaproduct>
    </helpers>
  	<blocks>
  	  <customerasaproduct>
  		  <class>Javen_CustomerAsAProduct_Block</class>
  	  </customerasaproduct>
  	</blocks>
    <models>
  	  <customerasaproduct>
  		  <class>Javen_CustomerAsAProduct_Model</class>
  		  <resourceModel>customerasaproduct_mysql4</resourceModel>
  	  </customerasaproduct>
	  </models>
  <events>
	  <customer_login> <!-- identifier of the event we want to catch -->
        <observers>
          <customer_login_handler> <!-- identifier of the event handler -->
            <type>model</type> <!-- class method call type; valid are model, object and singleton -->
            <class>customerasaproduct/observer</class> <!-- observers class alias -->
            <method>customerLogin</method>  <!-- observer's method to be called -->
            <args></args> <!-- additional arguments passed to observer -->
          </customer_login_handler>
        </observers>
      </customer_login>
    </events>
    <resources>
      <customerasaproduct_setup>
        <setup>
          <module>Javen_CustomerAsAProduct</module>
          <class>Mage_Catalog_Model_Resource_Eav_Mysql4_Setup</class>
        </setup>
        <connection>
          <use>core_setup</use>
        </connection>
      </customerasaproduct_setup>
      <customerasaproduct_write>
        <connection>
          <use>core_write</use>
        </connection>
      </customerasaproduct_write>
      <customerasaproduct_read>
        <connection>
          <use>core_read</use>
        </connection>
      </customerasaproduct_read>
    </resources>
  </global>
</config>
